<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.ChattingApp" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.ChattingApp" parent="Base.Theme.ChattingApp" />
    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/chat</item>
        <item name="postSplashScreenTheme">@style/Base.Theme.ChattingApp</item>
    </style>
    <style name="SoftCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">10dp</item>
        <item name="color">@color/white</item>
    </style>
    <style name="EditTextStyle" parent="Widget.AppCompat.EditText">
        <item name="android:background">#ECE7E7</item>
        <item name="android:textColor">@color/black</item>
        <item name="backgroundTint">#ECE7E7</item>
        <item name="cornerRadius">20dp</item>
        <item name="elevation">40dp</item>
    </style>

</resources>